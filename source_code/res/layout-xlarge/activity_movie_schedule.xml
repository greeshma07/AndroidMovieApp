<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.udayton.onlinemoviebooking.MovieSchedule"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/showtimes"
        android:id="@+id/showtimeTextView"
        android:textColor="@android:color/black"
        android:textSize="@dimen/xlargeSubTitleTextSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_below="@+id/ratingBarImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeText"
        android:id="@+id/timeTextView"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/xlargeListItemTextSize"
        android:layout_above="@+id/radGrpTimes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:padding="@dimen/margin10dp"
        android:id="@+id/radGrpTimes"
        android:layout_above="@+id/bookButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radBtn1"
            android:id="@+id/radioButton1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/xlargeListItemTextSize"
            android:padding="@dimen/margin5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radBtn2"
            android:id="@+id/radioButton2"
            android:textSize="@dimen/xlargeListItemTextSize"
            android:textColor="@android:color/black"
            android:padding="@dimen/margin5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radBtn3"
            android:id="@+id/radioButton3"
            android:padding="@dimen/margin5dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/xlargeListItemTextSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radBtn4"
            android:id="@+id/radioButton4"
            android:textSize="@dimen/xlargeListItemTextSize"
            android:textColor="@android:color/black"
            android:padding="@dimen/margin5dp"
            android:layout_marginBottom="@dimen/margin5dp" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moreInfoButton"
        android:id="@+id/moreInfoButton"
        android:textSize="@dimen/xlargeListItemTextSize"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/trailerButton"
        android:layout_alignStart="@+id/trailerButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trailerBtnText"
        android:id="@+id/trailerButton"
        android:textSize="@dimen/xlargeListItemTextSize"
        android:textColor="@android:color/black"
        android:layout_below="@+id/moreInfoButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookButtonText"
        android:id="@+id/bookButton"
        android:textColor="@android:color/black"
        android:textSize="@dimen/xlargeTextSize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/xlargeRatingBarImgWidth"
        android:layout_height="@dimen/xlargeRatingBarImgHght"
        android:id="@+id/ratingBarImageView"
        android:layout_below="@+id/movLogoImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/ratingBar"
        android:layout_marginTop="@dimen/margin5dp" />

    <ImageView
        android:layout_width="@dimen/xlargeImgWidth"
        android:layout_height="@dimen/xlargeImgHeight"
        android:id="@+id/movLogoImageView"
        android:layout_alignTop="@+id/moreInfoButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/movieLogo"
        android:layout_marginBottom="@dimen/margin5dp" />

</RelativeLayout>
