<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.udayton.onlinemoviebooking.OutputScreenActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outMsg"
        android:id="@+id/outputTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin20dp"
        android:layout_marginBottom="@dimen/margin20dp"
        android:textSize="@dimen/xlargeListItemTextSize"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/xlargeOutImgWidth"
        android:layout_height="@dimen/xlargeOutImgHght"
        android:id="@+id/outImageView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin20dp"
        android:src="@drawable/outimage"
        android:contentDescription="@string/outMsg" />

</LinearLayout>
