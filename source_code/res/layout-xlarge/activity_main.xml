<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.udayton.onlinemoviebooking.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcomeText"
        android:id="@+id/welcomeTextView"
        android:textColor="@color/textColor"
        android:textSize="@dimen/xlargeTextSize"
        android:textStyle="bold|italic"
        android:layout_marginBottom="@dimen/margin5dp"
        android:layout_marginTop="@dimen/margin10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appDemoTxt"
        android:id="@+id/demoTextView"
        android:layout_gravity="right"
        android:textColor="@android:color/black"
        android:textSize="@dimen/xlargeListItemTextSize"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playLbl"
        android:id="@+id/audioButton"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="@dimen/xlargeListItemTextSize"
        android:layout_marginRight="@dimen/margin20dp"
        android:layout_marginBottom="@dimen/margin20dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/radGroup"
        android:padding="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/runMovies"
            android:id="@+id/radioButtonRunMovies"
            android:checked="true"
            android:textSize="@dimen/xlargeTextSize"
            android:padding="@dimen/margin5dp"
            android:textColor="@android:color/black" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upComMov"
            android:id="@+id/radioButtonUpComMovies"
            android:textSize="@dimen/xlargeTextSize"
            android:padding="@dimen/margin5dp"
            android:textColor="@android:color/black" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viewMovieList"
        android:id="@+id/movieListButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin10dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/xlargeTextSize"
        android:layout_marginBottom="@dimen/margin10dp" />

    <ImageView
        android:layout_width="@dimen/xlargeHomeImgWdth"
        android:layout_height="@dimen/xlargeHomeImgHght"
        android:id="@+id/movieImageView"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/movies"
        android:layout_marginTop="@dimen/margin20dp"
        android:src="@drawable/movie_home" />

</LinearLayout>
