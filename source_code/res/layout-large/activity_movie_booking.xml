<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.udayton.onlinemoviebooking.MovieBooking"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/movTitle"
        android:id="@+id/movTitleTtextView"
        android:layout_marginBottom="@dimen/margin20dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/largeTextSize"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showtimes"
        android:id="@+id/movShowtimeTextView"
        android:textSize="@dimen/largeListItemTextSize"
        android:textColor="@android:color/black"
        android:layout_marginBottom="@dimen/margin5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ticketCost"
        android:id="@+id/ticketCostTextView"
        android:layout_marginBottom="@dimen/margin5dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/largeListItemTextSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seatCount"
        android:id="@+id/seatCountTextView"
        android:textSize="@dimen/largeListItemTextSize"
        android:textColor="@android:color/black"
        android:layout_marginBottom="@dimen/margin20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint"
        android:id="@+id/hintTextView"
        android:layout_marginBottom="@dimen/margin20dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/largeListItemTextSize"
        android:layout_marginTop="@dimen/margin20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstNameEditText"
        android:textSize="@dimen/largeListItemTextSize"
        android:textColor="@android:color/black"
        android:hint="@string/firstName"
        android:layout_marginBottom="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastNameEditText"
        android:hint="@string/lastName"
        android:textColor="@android:color/black"
        android:textSize="@dimen/largeListItemTextSize"
        android:layout_marginBottom="@dimen/margin10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailEditText"
        android:textSize="@dimen/largeListItemTextSize"
        android:textColor="@android:color/black"
        android:hint="@string/emailID"
        android:layout_marginBottom="@dimen/margin10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mobEditText"
        android:hint="@string/mobNO"
        android:textColor="@android:color/black"
        android:textSize="@dimen/largeListItemTextSize"
        android:layout_marginBottom="@dimen/margin10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tcktCountEditText"
        android:textColor="@android:color/black"
        android:textSize="@dimen/largeListItemTextSize"
        android:hint="@string/ticketNum"
        android:layout_marginBottom="@dimen/margin20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/makePayBtnText"
        android:id="@+id/makePayButton"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/largeTextSize"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/margin20dp" />

</LinearLayout>
